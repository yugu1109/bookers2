<div class="col-md-3">

   <div>
    <h1>User info</h1>
    <p><%= image_tag @user.get_profile_image(100,100) %></p>
    <p>name:<%= user.name %></p>
    <p>introduction:<%= user.introduction %></p>
   </div>

    <%= link_to edit_user_path(@user),class: "btn btn-outline-secondary btn-sm btn-block sign_up" do %>
    <i class="fa-solid fa-user-gear"></i>
    <% end %>

    <h1>New book</h1>
<%= form_with model: book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

</div>